{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "RewindOS",
  "version": "0.6.0",
  "identifier": "com.jay.rewindos",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "cargo build -p rewindos-daemon --release && bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "RewindOS",
        "width": 900,
        "height": 650,
        "minWidth": 700,
        "minHeight": 500
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: https://asset.localhost; font-src 'self' data:; connect-src 'self' http://localhost:11434",
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": ["$HOME/.rewindos/**"],
          "deny": []
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm"],
    "resources": [
      "../target/release/rewindos-daemon",
      "../systemd/rewindos-daemon.service"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "depends": ["tesseract-ocr", "tesseract-ocr-eng", "libpipewire-0.3-0", "libdbus-1-3"],
        "desktopTemplate": "../systemd/rewindos.desktop",
        "postInstallScript": "../scripts/postinstall.sh",
        "preRemoveScript": "../scripts/prerm.sh"
      },
      "rpm": {
        "depends": ["tesseract", "tesseract-langpack-eng", "pipewire-libs", "dbus-libs"],
        "postInstallScript": "../scripts/postinstall.sh",
        "preRemoveScript": "../scripts/prerm.sh"
      }
    }
  }
}
